{
  "name": "require-tasks",
  "version": "0.0.2",
  "description": "A tool to load tasks (from a directory) and output contents as a mapped object",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register test/*.js",
    "test-coverage": "babel-node ./node_modules/.bin/isparta cover _mocha",
    "transpile": "babel src --out-dir lib",
    "prepublish": "npm run test && npm run transpile",
    "dev": "npm run transpile & npm run test -- -w",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "keywords": [
    "gulp",
    "load",
    "tasks",
    "directory"
  ],
  "author": "Dustin Schau",
  "repository": {
    "type": "git",
    "url": "https://github.com/DSchau/require-tasks.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "conventional-changelog-cli": "^1.1.1",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4"
  },
  "dependencies": {
    "extend": "^3.0.0",
    "require-dir": "^0.3.0"
  }
}
